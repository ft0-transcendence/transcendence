{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"outDir": "../dist/backend",
		"noEmit": false,
		"target": "ES2022",
		"lib": [
			"ES2020",
			"DOM"
		],
		"paths": {
			"@backend/*": [
				"./*"
			]
		}
	},
	"include": [
		"./types/fastify.d.ts",
		"./**/*.ts",
		"game/game.ts"
	]
}
