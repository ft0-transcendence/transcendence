{
	"files": [],
	"references": [
		{ "path": "./backend" },
		{ "path": "./frontend" }
	],
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2020"
		],
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"paths": {
			"@frontend/*": [
				"./frontend/*"
			],
			"@backend/*": [
				"./backend/*"
			]
		},
	}
}
